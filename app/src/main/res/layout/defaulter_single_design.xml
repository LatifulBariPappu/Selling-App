<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:weightSum="5"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:id="@+id/modeIcon"
                    android:src="@drawable/defaulticon"
                   />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4.1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="name"
                        android:textSize="14sp"
                        android:id="@+id/defaulterNameTv"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="mobile"
                        android:textSize="14sp"
                        android:id="@+id/defaulterMobileTv"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="IMEI1"
                        android:textSize="14sp"
                        android:id="@+id/defaulterImei1Tv"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="total defaulted amount"
                        android:textSize="14sp"
                        android:id="@+id/defaultedAmountTv"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="down pay date"
                        android:textSize="14sp"
                        android:id="@+id/downPayTv"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="defaulted date"
                        android:textSize="14sp"
                        android:id="@+id/defaultedDateTv"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="remaining"
                        android:textSize="14sp"
                        android:id="@+id/remainingToPayTv"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/defaulterEmiStatusTV"
                    android:background="#9FF8A3"
                    android:text="Running"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:layout_margin="10dp"
                    android:textSize="12sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/my_primary"
                        android:id="@+id/deviceDetailBtn"
                        android:hint="Details"
                        android:layout_marginEnd="15dp"
                        android:textSize="14sp"
                        android:textColorHint="@color/white"/>
                    <ProgressBar
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/defaulterProgress"
                        android:visibility="gone"/>
                </LinearLayout>
                <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#FF4D4D"
                    android:id="@+id/deviceLockBtn"
                    android:layout_marginStart="15dp"
                    android:drawableRight="@drawable/baseline_lock_24"
                    android:hint="Lock"
                    android:textSize="14sp"
                    android:textColorHint="@color/white"/>
                    <ProgressBar
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/defaulterLockProgress"
                        android:visibility="gone"/>

            </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>